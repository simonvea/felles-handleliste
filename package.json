{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run build:tailwind && rollup -c",
    "dev:notailwind": "rollup -c -w",
    "validate": "svelte-check",
    "watch:tailwind": "postcss src/tailwind.css -o public/index.css -w",
    "build:tailwind": "NODE_ENV=production postcss src/tailwind.css -o public/index.css",
    "dev": "run-p autobuild watch:tailwind",
    "start": "sirv public --single",
    "start:dev": "sirv public --single --dev",
    "autobuild": "rollup -c -w"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^4.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "@types/dom-inputevent": "^1.0.5",
    "autoprefixer": "^9.8.6",
    "cssnano": "^4.1.10",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^6.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tailwindcss": "^1.7.5",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "firebase": "^7.18.0",
    "sirv-cli": "^1.0.0"
  }
}
